# DisasterShield Environment Configuration
# Copy this file to .env and fill in your actual values

# IBM watsonx.ai Credentials (REQUIRED)
# Get these from your IBM watsonx.ai project page
WATSONX_URL=https://us-south.ml.cloud.ibm.com
WATSONX_API_KEY=your_api_key_here
WATSONX_PROJECT_ID=your_project_id_here

# Optional: OpenWeatherMap API (for global weather data)
# Sign up at https://openweathermap.org/api if needed
OPENWEATHER_API_KEY=your_openweather_key_here

# Optional: Development Settings
DEBUG_MODE=true
LOG_LEVEL=INFO
DEMO_MODE=true

# These are automatically used by the system - no need to change
DEFAULT_SCENARIO=san_francisco
RESPONSE_TIMEOUT=300
MAX_THREATS_TO_PROCESS=10